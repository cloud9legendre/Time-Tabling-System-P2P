{
    "appId": "com.university.lab-timetable",
    "productName": "Lab Timetable",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*"
    ],
    "win": {
        "target": [
            "nsis",
            "portable"
        ],
        "icon": "dist/icon.ico"
    },
    "mac": {
        "target": [
            "dmg"
        ],
        "icon": "dist/icon.png"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "icon": "dist/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}