{
  "name": "lab-timetable-p2p",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"tsc -p electron-src/tsconfig.json --watch\" \"electron .\"",
    "build": "tsc -b && vite build",
    "build:electron": "vite build && tsc -p electron-src/tsconfig.json",
    "build:win": "npm run build:electron && electron-builder --win",
    "build:mac": "npm run build:electron && electron-builder --mac",
    "build:linux": "npm run build:electron && electron-builder --linux",
    "electron": "tsc -p electron-src/tsconfig.json && npx electron .",
    "test:p2p": "tsc -p electron-src/tsconfig.json && node scripts/test-p2p.cjs",
    "peer:1": "tsc -p electron-src/tsconfig.json && npx electron . --user-data-dir=.test-peers/peer1",
    "peer:2": "tsc -p electron-src/tsconfig.json && npx electron . --user-data-dir=.test-peers/peer2",
    "peer:3": "tsc -p electron-src/tsconfig.json && npx electron . --user-data-dir=.test-peers/peer3",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
